<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ClientMotor.JenisMotorPage">
	<ContentPage.Content>
		<StackLayout>
	<ListView x:Name="lstjenismotor" ItemsSource="{Binding ListJenisMotor}">
	<ListView.ItemTemplate>
	<DataTemplate>
	<ViewCell>
							
		<StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal" Padding="25,10,55,25">

		<StackLayout HorizontalOptions="StartAndExpand" Orientation="Vertical" >
					<StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal"><Label Font="8">Merek : </Label><Label x:Name="lblmerek" Font="Bold,8" Text="{Binding NamaMerk}" HorizontalOptions="Start"/></StackLayout>

					<StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal"><Label Font="8">Jenis Motor : </Label><Label x:Name="lbljenis" FontSize="8" Text="{Binding NamaJenisMotor}" HorizontalOptions="Start"/></StackLayout>
				</StackLayout>
		</StackLayout>
	</ViewCell>

			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
		<Button x:Name="btntambah" Text="Tambah"></Button>
			</StackLayout>
	</ContentPage.Content>
</ContentPage>
